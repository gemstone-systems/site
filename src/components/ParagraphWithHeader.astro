---
interface Props {
    header?: string;
}
const { header } = Astro.props;
---

<div class="flex flex-col items-start gap-4">
    {
        header && (
            <h1 class="font-maple-mono text-gmstn-purple text-2xl font-bold">
                {header}
            </h1>
        )
    }
    <slot />
</div>
